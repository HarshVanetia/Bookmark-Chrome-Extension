{
    "manifest_version": 3,
    "name": "Chrome Extension Vite React",
    "version": "1.0.0",
    "description": "A Chrome extension built with Vite and React.",
    "permissions": ["activeTab"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "assets/torch.png",
            "48": "assets/torch.png",
            "128": "assets/torch.png"
        }
    },
    "icons": {
        "16": "assets/torch.png",
        "48": "assets/torch.png",
        "128": "assets/torch.png"
    }
}
